// This is the project config that Rome uses to compile itself
name: "romejs"
isolated: true

bundler: {
  mode: "modern"
}

lint: {
  ignore: [
    "build"
    "coverage"
    "flow-typed"
    "node_modules"
    "core/static"
    "resources"
    "__generated__"
    "__fixtures__"
    "vendor"
    "type-libs"
    "lib/modules.js"
  ]
}
